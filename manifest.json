{
  "name": "Extension for test pseudolocalization",
  "description": "Chrome extension for test pseudolocalization in snfiller editor.",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "src/popup.html",
    "default_icon": {
      "48": "src/signNow.png",
      "128": "src/signNow.png"
    }
  },
  "icons": {
    "128": "src/signNow.png"
  },
  "permissions": [
    "contextMenus",
    "notifications",
    "storage",
    "scripting",
    "tabs"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "host_permissions": [
    "https://app.signnow.com/*",
    "https://app3.signnow-dev.xyz/*",
    "https://app-rc.signnow.com/*",
    "https://app.signnow-rc.xyz/*",
    "http://localhost/*"
  ]
}
